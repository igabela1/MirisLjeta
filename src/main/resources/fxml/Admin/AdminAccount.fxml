                    <TableColumn fx:id="lastNameColumn" prefWidth="200.0" text="LAST NAME" />
                    <TableColumn fx:id="emailColumn" prefWidth="200.0" text="EMAIL" />
                    <TableColumn fx:id="usernameColumn" prefWidth="150.0" text="USERNAME" />
                </columns>
            </TableView>
        </Tab>

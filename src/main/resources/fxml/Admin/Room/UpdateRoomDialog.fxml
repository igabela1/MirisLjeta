<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Capacity" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="capacityField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <Label text="Price Per Night" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="pricePerNightField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Status (available)" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <HBox GridPane.columnIndex="1" GridPane.rowIndex="2">
        <RadioButton fx:id="statusYesRadioButton" text="Yes" />
        <RadioButton fx:id="statusNoRadioButton" text="No">
         <HBox.margin>
            <Insets left="30.0" />
         </HBox.margin></RadioButton>
    </HBox>
    <HBox alignment="center" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <Button fx:id="saveButton" text="Save" />
        <Button fx:id="cancelButton" text="Cancel">
         <HBox.margin>
            <Insets left="30.0" />
         </HBox.margin></Button>
    </HBox>
   <columnConstraints>
      <ColumnConstraints maxWidth="118.33333333333333" minWidth="65.33333333333333" prefWidth="105.33333333333333" />
      <ColumnConstraints maxWidth="163.33333333333334" minWidth="110.33333333333334" prefWidth="123.33333333333334" />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <opaqueInsets>
      <Insets left="20.0" />
   </opaqueInsets>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</GridPane>
